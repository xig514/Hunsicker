        $(document).ready(function() {
                          
                         
                          $("#nav").height($("#section").outerHeight());
                          $('#BillingContactPhone1').autotab({ target: '#BillingContactPhone2', format: 'numeric' });
                          $('#BillingContactPhone2').autotab({ target: '#BillingContactPhone3', format: 'numeric', previous: '#BillingContactPhone1' });
                          $('#BillingContactPhone3').autotab({ previous: '#BillingContactPhone2', format: 'numeric'});
                          //alert($("#selectedCompanyID").html());
                          var CompanyNumber =0;
                          var CompanyName ="#"+(20*CompanyNumber+0).toString();
                          var Address="#"+ (20*CompanyNumber+2).toString();
                          var City="#"+(20*CompanyNumber+3).toString();
                          var State = "#"+(20*CompanyNumber+4).toString();
                          var Zip = "#"+(20*CompanyNumber+5).toString();
                          var FirstName ="#"+ (20*CompanyNumber+6).toString();
                          var LastName= "#"+(20*CompanyNumber+7).toString();
                          var Email ="#"+(20*CompanyNumber+8).toString();
                          var Phone = "#"+(9).toString();
                          var CompanyStatusID="#"+(10).toString();
                          console.log("CompanyName   " +CompanyName );
                          $("#CompanyName").val($(CompanyName).html());
                        
                          //console.log($(Address).html());
                          $("#Address").val($(Address).html());
                          $("#City").val($(City).html());
                          $("#State").val($(State).html());
                          $("#Zip").val($(Zip).html());
                          $("#BillingContactFirstName").val($(FirstName).html());
                          $("#BillingContactLastName").val($(LastName).html());
                          $("#BillingContactEmail").val($(Email).html());
                          $("#BillingContactPhone1").val($(Phone).html().substring(0,3));
                          $("#BillingContactPhone2").val($(Phone).html().substring(3,6));
                          $("#BillingContactPhone3").val($(Phone).html().substring(6,10));
                          var radios=$('input:radio[name=CompanyStatusID]');
                          if($(CompanyStatusID).html()==0){
                          console.log('sao');
                          radios.filter('[value="No"]').prop('checked',true);
                          }
                          else{
                          radios.filter('[value="Yes"]').prop('checked',true);
                          }
                          //$("#form_1").attr("action", "/editCompanyAdmin/" + $("#CompanyID").val());
                          
                          
                          });
                          
            
        
      
        
